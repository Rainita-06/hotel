# Example .env.local file for local database connection
# Copy this file to .env.local and update with your actual database credentials

# Django Settings
DJANGO_SECRET_KEY=your-very-long-secret-key-here
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration - UPDATE THESE VALUES WITH YOUR LOCAL DATABASE DETAILS
# Example for a local MySQL database:
DB_NAME=hotel_management
DB_USER=hotel_user
DB_PASSWORD=secure_password123
DB_HOST=host.docker.internal
DB_PORT=3306

# Timezone
TIME_ZONE=Asia/Kolkata